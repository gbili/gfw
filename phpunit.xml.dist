<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./tests/Gbili/Tests/TestInit.php"
>
    <testsuites>
        <testsuite name="Gbili Test Suite">
            <directory>./tests/Gbili/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./library/Gbili/</directory>
        </whitelist>
    </filter>
    
    <groups>
        <exclude>
            <group>performance</group>
        </exclude>
    </groups>
</phpunit>
